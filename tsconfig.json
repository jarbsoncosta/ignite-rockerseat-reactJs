{
  "compilerOptions": { // inclui tipagens html
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true, //será possivel utilizar tanto javascript quanto typescript
    "jsx": "react-jsx", //entender html dentro do javascript com jsx
    "noEmit": true,
    "strict": true, // modulo para lidar com erros 
    "resolveJsonModule": true, //suportar arquivos json
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [ //onde todo codigo da aplicação vai estar
    "src"
  ]
}